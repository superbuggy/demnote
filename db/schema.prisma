// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  comments  Comment[]
  createdAt DateTime  @default(now()) @map(name: "created_at") // Mapping for auth
  updatedAt DateTime  @updatedAt @map(name: "updated_at") // Mapping for auth

  @@map(name: "users") // Mapping for auth
}

model Comment {
  id          String     @id @default(cuid())
  userId      String?
  audioFileId String?
  subject     AudioFile? @relation(fields: [audioFileId], references: [id])
  author      User?      @relation(fields: [userId], references: [id])
  text        String
}

model AudioFile {
  id       String    @id @default(cuid())
  name     String
  url      String
  length   Decimal
  comments Comment[]
}
